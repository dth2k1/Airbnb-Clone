<li class= "relative">
  <div class="group block w-full aspect-w-10 aspect-h-7 rounded-lg bg-gray-100 focus-within:ring-2 focus-within:ring-offset-2 focus-within:ring-offset-gray-100 focus-within:ring-indigo-500 overflow-hidden">
    <%= image_tag property.images.first, class: "object-cover pointer-events-none group-hover:opacity-75"  if property.images.attached? %>
    <button type="button" class="absolute inset-0 focus:outline-none">
      <span class="sr-only">View details for IMG_4985.HEIC</span>
    </button>
     <div class="flex flex-row-reverse p-2">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          id="favorite-svg"
          class="h-8 w-8 cursor-pointer"
          data-controller= "favorite"
          data-favorited= "false"
          data-action= "click->favorite#favorite"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
          stroke-width="2"
        >
          <path stroke-linecap="round" stroke-linejoin="round" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
        </svg>
      </div>
  </div>
  <p class="mt-2 block text-sm font-medium text-gray-900 truncate pointer-events-none"><%= property.city %>, <%= property.state %> <%= property.country %></p>
  <p class="block text-sm font-medium text-gray-500 pointer-events-none text-black">
    <%= property.caculate_rating.round(1) %>
    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 inline-block relative" viewBox="0 0 20 20" fill="currentColor" style="bottom: 2px;">
      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
    </svg>
  </p>
  <p class="block text-sm font-medium text-gray-500 pointer-events-none">20km</p>
  <p class="block text-sm font-medium text-gray-500 pointer-events-none">Jun 19-24</p>
  <p class="block text-sm font-medium text-gray-500 pointer-events-none"><%= humanized_money_with_symbol property.price %></p>
</li>
